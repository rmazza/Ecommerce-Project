@model Store.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "loginForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("",new { @class = "bg-danger" });
    <fieldset>
        <legend style="margin-left:5px;">@ViewBag.Title</legend>
        <div class="row">
            <div class="form-group loginBox">
                <div class="logInput">
                    @Html.TextBoxFor(x => x.username, new { @class = "form-control", @placeholder = "Username" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group loginBox">
                <div class="logInput">
                    @Html.PasswordFor(x => x.password, new { @class = "form-control" , @placeholder = "Password"})
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group loginBox">
                <div class="logInput">
                    @Html.PasswordFor(x => x.confirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group loginBox">
                <div class="logInput">
                    @Html.TextBoxFor(x => x.email, new { @class = "form-control", @placeholder = "Email" })
                </div>
            </div>
        </div>
                <div class="row">
                    <div class="loginSubmit">
                        <div class="logInput">
                            <input type="submit" value="Register" />
                        </div>
                    </div>
                </div>
</fieldset>
}

