@model Store.Models.Register

@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.ValidationSummary(false, "", new { @class = "bg-danger" })
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Login</legend>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(x => x.usr.Username, new { @class = "control-label col-xs-3 text-right" })
                @Html.TextBoxFor(x => x.usr.Username, new { @class = "form-control col-sm-9" })
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(x => x.password, new { @class = "control-label col-xs-3 text-right" })
                @Html.TextBoxFor(x => x.password, new { @class = "form-control col-xs-9" })
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor( x => x.cust.FirstName, new { @class = "control-label col-xs-3 text-right" })
                @Html.TextBoxFor(x => x.cust.FirstName, new { @class = "form-control col-xs-9" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-2">
                <input type="submit" value="Submit" />
            </div>
        </div>
    </fieldset>
}

