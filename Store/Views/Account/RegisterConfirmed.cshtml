@if (ViewBag.Confirmed)
{
    <div class="row text-center">
        <div class="bg-success">
            <h2>Email Address Confirmed</h2>
        </div>
        <div>
           <h3>@Html.ActionLink("Click here to sign in", "Login","Account")</h3>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="bg-danger">Email Addres Not Confirmed</div>
    </div>
}