@model Store.Models.CheckoutModel

@{
    ViewBag.Title = "Checkout Page";
}

<h2>@ViewBag.Title</h2>

<div class="col-xs-12">
    @using (Html.BeginForm(new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(false ,"", new { @class = "bg-danger" })

        <fieldset>
            <legend>Shipping Address</legend>
        <div class="row checkOutRow">
            <div class="form-group">
                @Html.LabelFor(m => m.firstName, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.firstName, new { @class = "form-control col-sm-10" })
                    @Html.ValidationMessageFor(m => m.firstName)
                </div>
            </div>
        </div>

        <div class="row checkOutRow">
            <div class="form-group">
                @Html.LabelFor(m => m.middleInitial, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.middleInitial, new { @class = "form-control col-sm-10" })
                    @Html.ValidationMessageFor(m => m.middleInitial)
                </div>
            </div>
        </div>

        <div class="row checkOutRow">
            <div class="form-group">
                @Html.LabelFor(m => m.lastName, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.lastName, new { @class = "form-control col-sm-10" })
                    @Html.ValidationMessageFor(m => m.lastName)
                </div>
            </div>
        </div>

        <div class="row checkOutRow">
            <div class="form-group">
                @Html.LabelFor(m => m.email, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.email, new { @class = "form-control col-sm-10" })
                    @Html.ValidationMessageFor(m => m.email)
                </div>

            </div>
        </div>

        <div class="row checkOutRow">
            <div class="form-group">
                @Html.LabelFor(m => m.streetName, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.streetName, new { @class = "form-control col-sm-10" })
                    @Html.ValidationMessageFor(m => m.streetName)
        </div>
    </div>
</div>

        <div class="row checkOutRow">
            <div class="form-group">
                @Html.LabelFor(m => m.city, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.city, new { @class = "form-control col-sm-10" })
                    @Html.ValidationMessageFor(m => m.city)
                </div>
            </div>
        </div>

        <div class="row checkOutRow">
            <div class="form-group">
                @Html.LabelFor(m => m.state, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.state, new { @class = "form-control col-sm-10" })
                    @Html.ValidationMessageFor(m => m.state)
                </div>
            </div>
        </div>

        <div class="row checkOutRow">
            <div class="form-group">
                @Html.LabelFor(m => m.zipcode, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.zipcode, new { @class = "form-control col-sm-10" })
                    @Html.ValidationMessageFor(m => m.zipcode)
                </div>
            </div>
        </div>

