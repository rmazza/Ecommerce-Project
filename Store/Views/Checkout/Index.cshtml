@model Store.Models.CheckoutModel

@{
    ViewBag.Title = "Checkout Page";
}

<head>
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>

<h2>@ViewBag.Title</h2>

<div class="col-xs-12">
    @using (Html.BeginForm(new { @class = "form-horizontal" }))
    {
        <div class="row checkOutRow">
            <div class="form-group">
                @Html.LabelFor(m => m.firstName, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.firstName, new { @class = "form-control col-sm-10" })
                </div>
            </div>
        </div>

        <div class="row checkOutRow">
            <div class="form-group">
                @Html.LabelFor(m => m.lastName, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.lastName, new { @class = "form-control" })
                </div>

            </div>
        </div>

        <div class="row checkOutRow">
            <div class="form-group">
                @Html.LabelFor(m => m.streetName, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.streetName, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="row checkOutRow">
            <div class="form-group">
                @Html.LabelFor(m => m.city, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.city, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="row checkOutRow">
            <div class="form-group">
                @Html.LabelFor(m => m.state, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.state, new { @class = "form-control" })
                </div>
           </div>
        </div>

        <div class="row checkOutRow">
            <div class="form-group">
                @Html.LabelFor(m => m.zipcode, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.zipcode, new { @class = "form-control" })
                </div>
           </div>
        </div>

        @*<div class="row checkOutRow">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="g-recaptcha" data-sitekey="6Le91AcUAAAAAMUFyugc_QAd5xKQSv5PhRcvdZsE"></div>
            </div>
        </div>*@

        <div class="row">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" title="Add to Cart" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>